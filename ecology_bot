import telebot

BOT_TOKEN = "" # –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ –≤–∞—à —Ç–æ–∫–µ–Ω

bot = telebot.TeleBot(BOT_TOKEN)

@bot.message_handler(commands=['start'])
def send_welcome(message):
  bot.reply_to(message, """
–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç, –∫–æ—Ç–æ—Ä—ã–π –ø–æ–º–æ–≥–∞–µ—Ç –±–æ—Ä–æ—Ç—å—Å—è —Å –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ–º –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã. 
""")

@bot.message_handler(commands=['eco'])
def send_welcome(message):
  bot.reply_to(message, "–Ω–∞—É–∫–∞ –∫–æ—Ç–æ—Ä–∞—è –∏–∑—É—á–∞–µ—Ç –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏—è –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã" )

@bot.message_handler(commands=['help'])
def send_welcome(message):
  bot.reply_to(message, "–∫–æ–º–∞–Ω–¥–∞ eco —Ä–∞—Å—Å–∫–∞–∂–µ—Ç —á—Ç–æ —Ç–∞–∫–æ–µ —ç–∫–æ–ª–æ–≥–∏—è,–∫–æ–º–∞–Ω–¥–∞ info —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –ø—Ä–æ –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã, –∫–æ–º–∞–Ω–¥–∞ organizations –ø—Ä–æ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–∏ –∫–æ—Ç–æ—Ä—ã–µ –æ—á–∏—â–∞—é—Ç –æ–∫—Ä—É–∂–∞—é—â—É—é —Å—Ä–µ–¥—É, –∫–æ–º–∞–Ω–¥–∞ tips —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –ø—Ä–æ —Å–æ–≤–µ—Ç—ã –ø–æ —Å–Ω–∏–∂–µ–Ω–∏—é –≤–∞—à–µ–≥–æ —É–≥–ª–µ—Ä–æ–¥–Ω–æ–≥–æ —Å–ª–µ–¥–∞, –∫–æ–º–∞–Ω–¥–∞ you —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –ø—Ä–æ —ç—Ç–æ–≥–æ –±–æ—Ç–∞, –∫–æ–º–∞–Ω–¥–∞ mem —Ä–∞—Å—Å–∫–∞–∂–µ—Ç –ø–æ—á–µ–º—É —ç—Ç–æ—Ç –±–æ—Ç –±–µ–∑ –º–µ–º–æ–≤, –∫–æ–º–∞–Ω–¥–∞ information —Ä–∞—Å—Å–∫–∞–∂–µ—Ç —á—Ç–æ —Ç–∞–∫–æ–µ —Ü–µ–ª–µ–≤–∞—è –∞—É–¥–∏—Ç–æ—Ä–∏—è " )

@bot.message_handler(commands=['info'])
def send_info(message):
  bot.reply_to(message, """
–ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã ‚Äî —Å–µ—Ä—å–µ–∑–Ω–∞—è –ø—Ä–æ–±–ª–µ–º–∞, –∑–∞—Ç—Ä–∞–≥–∏–≤–∞—é—â–∞—è –≤–æ–∑–¥—É—Ö, –≤–æ–¥—É –∏ –ø–æ—á–≤—É. –û—Å–Ω–æ–≤–Ω—ã–µ –∏—Å—Ç–æ—á–Ω–∏–∫–∏:
‚Ä¢ –ü—Ä–æ–º—ã—à–ª–µ–Ω–Ω–æ—Å—Ç—å
‚Ä¢ –¢—Ä–∞–Ω—Å–ø–æ—Ä—Ç
‚Ä¢ –°–∂–∏–≥–∞–Ω–∏–µ —Ç–æ–ø–ª–∏–≤–∞
‚Ä¢ –°–µ–ª—å—Å–∫–æ–µ —Ö–æ–∑—è–π—Å—Ç–≤–æ
‚Ä¢ –ü–ª–∞—Å—Ç–∏–∫–æ–≤—ã–π –º—É—Å–æ—Ä

–ü–æ—Å–ª–µ–¥—Å—Ç–≤–∏—è –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏—è: –∏–∑–º–µ–Ω–µ–Ω–∏–µ –∫–ª–∏–º–∞—Ç–∞, —É—Ö—É–¥—à–µ–Ω–∏–µ –∑–¥–æ—Ä–æ–≤—å—è —á–µ–ª–æ–≤–µ–∫–∞, –ø–æ—Ç–µ—Ä—è –±–∏–æ—Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–∏—è.
""")

@bot.message_handler(commands=['organizations'])
def send_organizations(message):
  bot.reply_to(message, """
–í–æ—Ç –Ω–µ—Å–∫–æ–ª—å–∫–æ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–π, –∫–æ—Ç–æ—Ä—ã–µ –∑–∞–Ω–∏–º–∞—é—Ç—Å—è –∑–∞—â–∏—Ç–æ–π –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã:
‚Ä¢ Greenpeace: [—Å—Å—ã–ª–∫–∞ –Ω–∞ Greenpeace]
‚Ä¢ WWF: [—Å—Å—ã–ª–∫–∞ –Ω–∞ WWF]
‚Ä¢ [–î–æ–±–∞–≤—å—Ç–µ –¥—Ä—É–≥–∏–µ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–∏ –∏ —Å—Å—ã–ª–∫–∏]
""")

@bot.message_handler(commands=['tips'])
def send_tips(message):
  bot.reply_to(message, """
–°–æ–≤–µ—Ç—ã –ø–æ —Å–Ω–∏–∂–µ–Ω–∏—é –≤–∞—à–µ–≥–æ —É–≥–ª–µ—Ä–æ–¥–Ω–æ–≥–æ —Å–ª–µ–¥–∞:
‚Ä¢ –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –æ–±—â–µ—Å—Ç–≤–µ–Ω–Ω—ã–π —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç, –≤–µ–ª–æ—Å–∏–ø–µ–¥ –∏–ª–∏ —Ö–æ–¥–∏—Ç–µ –ø–µ—à–∫–æ–º.
‚Ä¢ –≠–∫–æ–Ω–æ–º—å—Ç–µ —ç–ª–µ–∫—Ç—Ä–æ—ç–Ω–µ—Ä–≥–∏—é.
‚Ä¢ –°–æ—Ä—Ç–∏—Ä—É–π—Ç–µ –º—É—Å–æ—Ä –∏ –ø–µ—Ä–µ—Ä–∞–±–∞—Ç—ã–≤–∞–π—Ç–µ –æ—Ç—Ö–æ–¥—ã.
‚Ä¢ –ü–æ–∫—É–ø–∞–π—Ç–µ –º–µ—Å—Ç–Ω—ã–µ –ø—Ä–æ–¥—É–∫—Ç—ã.
‚Ä¢ –°–æ–∫—Ä–∞—â–∞–π—Ç–µ –ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ –ø–ª–∞—Å—Ç–∏–∫–∞.
‚Ä¢ –ù–µ –≤—ã–∫–∏–¥—ã–≤–∞–π—Ç–µ –º—É—Å–æ—Ä –≥–¥–µ –ø–æ–ø–∞–ª–æ.
""")

@bot.message_handler(commands=['bye'])
def send_tips(message):
  bot.reply_to(message, "–ø–æ–∫–∞, –¥–æ —Å–∫–æ—Ä—ã—Ö –≤—Å—Ç—Ä–µ—á")

@bot.message_handler(commands=['you'])
def send_tips(message):
  bot.reply_to(message, "—è –æ—Ñ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π –±–æ—Ç ‚Ññ1 —Å–≤–æ–µ–≥–æ —Å–æ–∑–¥–∞—Ç–µ–ª—è")

@bot.message_handler(commands=['mem'])
def send_tips(message):
  bot.reply_to(message, "—è –±–µ–∑ –º–µ–º–æ–≤ –ø–æ—Ç–æ–º—É —á—Ç–æ —ç–∫–æ–ª–æ–≥–∏—è —ç—Ç–æ —Å–µ—Ä—å—ë–∑–Ω–æüò†üò†üò†üò†üò†üò†üò†")

@bot.message_handler(commands=['information'])
def send_tips(message):
  bot.reply_to(message, "–¶–µ–ª–µ–≤–∞—è –∞—É–¥–∏—Ç–æ—Ä–∏—è ‚Äî —ç—Ç–æ –≥—Ä—É–ø–ø–∞ –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã—Ö –ø–æ—Ç—Ä–µ–±–∏—Ç–µ–ª–µ–π –∫–∞–∫–æ–≥–æ-—Ç–æ –ø—Ä–æ–¥—É–∫—Ç–∞, –ª—é–¥–∏, –∫–æ—Ç–æ—Ä—ã–µ –≤–µ—Ä–æ—è—Ç–Ω–µ–µ –≤—Å–µ–≥–æ –∑–∞–∏–Ω—Ç–µ—Ä–µ—Å—É—é—Ç—Å—è —Ç–æ–≤–∞—Ä–æ–º –∏–ª–∏ —É—Å–ª—É–≥–æ–π. –ù–∞–ø—Ä–∏–º–µ—Ä, –æ–¥–µ–∂–¥–∞ –¥–ª—è –Ω–æ–≤–æ—Ä–æ–∂–¥–µ–Ω–Ω—ã—Ö –≤–µ—Ä–æ—è—Ç–Ω–µ–µ –∑–∞–∏–Ω—Ç–µ—Ä–µ—Å—É–µ—Ç –º–æ–ª–æ–¥—ã—Ö —Ä–æ–¥–∏—Ç–µ–ª–µ–π, –∞ —Ç–æ–≤–∞—Ä—ã –¥–ª—è —Ä—ã–±–∞–ª–∫–∏ ‚Äî –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π –∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å–Ω–∏—Ü, –∫–æ—Ç–æ—Ä—ã–µ –≥—É–≥–ª—è—Ç ¬´—á–µ—Ä–≤—è–∫ –∏–ª–∏ –æ–ø–∞—Ä—ã—à¬ª.")

@bot.message_handler(func=lambda message: True)
def echo_all(message):
  bot.reply_to(message, "–ò–∑–≤–∏–Ω–∏, —è –Ω–µ –ø–æ–Ω–∏–º–∞—é. –ò—Å–ø–æ–ª—å–∑—É–π –∫–æ–º–∞–Ω–¥—ã /start, /info, /organizations, /eco, /bye, /you, /help, /mem, /information –∏–ª–∏ /tips")

bot.polling()
